
@{
    ViewBag.Title = "Pazaryeri Listesi";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
@model List<SipSis.DAL.DB.Market>
<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Pazaryeri Lİstesi</h5>
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead class="text-center">
                            <tr>
                                <th>Pazaryeri Adı</th>
                                <th>Komisyon Değeri</th>
                                @*<th>Kullanıcı Adı</th>*@
                                <th>İşlemler</th>                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>@item.MarketName</td>
                                    <td>@item.Commission</td>
                                    @*<td>@item.User.UserName</td>*@
                                    <td>
                                        <a href="/Market/Update/@item.ID" class="btn btn-warning"><i class="fa fa-edit"></i>Güncelle</a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                        
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

